@model Event

@{
    ViewBag.Title = "Create Event";
}

<div class="m-auto p-5 border border-secondary rounded-3 border-1 box-shadow shadow">
    <h2 class="card-title">Create Event</h2>
    <br><br>
    <form class="align-items-center" asp-controller="Event" asp-action="Create" method="post">
        <label asp-for="Title">Title</label>
        <br>
        <input class="input-group-text" type="text" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
        <br>

        <label asp-for="Description">Description</label>
        <br>
        <textarea class="input-group-text" asp-for="Description" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <br>

        <label asp-for="EventDate">Event Date</label>
        <br>
        <input class="input-group-text" type="datetime-local" asp-for="EventDate">
        <span asp-validation-for="EventDate" class="text-danger"></span>
        <br>

        <label asp-for="MaxParticipants">Maximum Participants</label>
        <br>
        <input class="input-group-text" type="number" asp-for="MaxParticipants" min="10" max="200">
        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
        <br>

        <label asp-for="Location">Location</label>
        <br>
        <input class="input-group-text" type="text" asp-for="Location">
        <span asp-validation-for="Location" class="text-danger"></span>
        <br>
        <br>

        <div class="mt-3">
            <input type="submit" class="btn btn-primary" value="Create">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}