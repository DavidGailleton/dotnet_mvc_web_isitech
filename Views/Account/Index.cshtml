@using Microsoft.AspNetCore.Identity
@model List<User>

@{
    ViewBag.Title = "Accounts";
    Layout = "_Layout";
}

<h1 class="bg-info text-white">Accounts</h1>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>Firstname</th><th>Lastname</th><th>email</th><th>Edit</th><th>Delete</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Firstname</td>
            <td>@user.Lastname</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Edit" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-info">
                        Edit
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>